@model IEnumerable<Category>
@{
    ViewData["Title"] = "Categories";
}

<partial name="_Notification"></partial>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary text-start">Test</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i> Create New Category
            </a>
        </div>
    </div>
</div>

<table class="table table-striped table-bordered w-100">
    <thead>
        <tr>
            <th>Name</th>
            <th>Display Order</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td width="50%">@category.Name</td>
                <td width="30%">@category.DisplayOrder</td>
                <td>
                    <div class="btn-group w-75" role="group">
                        <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary mx-2" role="button">
                            <i class="bi bi-pencil-square me-2"></i>Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger mx-2" role="button">
                            <i class="bi bi-trash me-2"></i>Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

