@{
    ViewData["Title"] = "Companies";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary text-start">Companies</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i> Create New Company
            </a>
        </div>
    </div>
</div>

<table class="table table-striped table-bordered w-100" id="Companies">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone Number</th>
            <th>Street Address</th>
            <th>City</th>
            <th>State</th>
            <th>Postal Code</th>
            <th></th>
        </tr>
    </thead>
</table>

<partial name="_Notification"></partial>

@section Scripts {
    <script src="~/js/companies/companies.js"></script>
}

