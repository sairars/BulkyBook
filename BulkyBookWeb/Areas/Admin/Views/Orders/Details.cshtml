@using BulkyBook.Utility;
@model OrderViewModel
@{
    ViewData["Title"] = "Order Details";
}

<form method="post" id="orderDetails">
    <input asp-for="Order.Id" hidden />
    <br />
    <div class="backgroundWhite container">
        <div class="card">
            <div class="card-header bg-dark text-light ml-0">
                <div class="container row">
                    <div class="col-12 d-none d-md-block col-md-6 pb-1">
                        <i class="fas fa-shopping-cart"></i> &nbsp; Order Details
                    </div>
                    <div class="col-12 col-md-4 offset-md-2 text-right">
                        <a class="btn btn-outline-info form-control btn-sm" asp-action="Index">
                            Back to Orders
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-primary">Pickup Details:</span>
                                </h4>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Name</div>
                                <div class="col-9">
                                    @if (User.IsInRole(StaticDetails.Admin) || User.IsInRole(StaticDetails.Staff))
                                    {
                                        <input asp-for="Order.Name" type="text" class="form-control" />
                                        <span asp-validation-for="Order.Name" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <input asp-for="Order.Name" type="text" class="form-control" readonly />
                                    }

                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Phone</div>
                                <div class="col-9">
                                    @if (User.IsInRole(StaticDetails.Admin) || User.IsInRole(StaticDetails.Staff))
                                    {
                                        <input asp-for="Order.PhoneNumber" type="text" class="form-control" />
                                        <span asp-validation-for="Order.PhoneNumber" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <input asp-for="Order.PhoneNumber" type="text" class="form-control" readonly />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Address</div>
                                <div class="col-9">
                                    @if (User.IsInRole(StaticDetails.Admin) || User.IsInRole(StaticDetails.Staff))
                                    {
                                        <input asp-for="Order.StreetAddress" type="text" class="form-control" />
                                        <span asp-validation-for="Order.StreetAddress" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <input asp-for="Order.StreetAddress" type="text" class="form-control" readonly />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">City</div>
                                <div class="col-9">
                                    @if (User.IsInRole(StaticDetails.Admin) || User.IsInRole(StaticDetails.Staff))
                                    {
                                        <input asp-for="Order.City" type="text" class="form-control" />
                                        <span asp-validation-for="Order.City" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <input asp-for="Order.City" type="text" class="form-control" readonly />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">State</div>
                                <div class="col-9">
                                    @if (User.IsInRole(StaticDetails.Admin) || User.IsInRole(StaticDetails.Staff))
                                    {
                                        <input asp-for="Order.State" type="text" class="form-control" />
                                        <span asp-validation-for="Order.State" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <input asp-for="Order.State" type="text" class="form-control" readonly />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Postal Code</div>
                                <div class="col-9">
                                    @if (User.IsInRole(StaticDetails.Admin) || User.IsInRole(StaticDetails.Staff))
                                    {
                                        <input asp-for="Order.PostalCode" type="text" class="form-control" />
                                        <span asp-validation-for="Order.PostalCode" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <input asp-for="Order.PostalCode" type="text" class="form-control" readonly />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Email</div>
                                <div class="col-9">
                                    <input asp-for="Order.User.Email" type="text" class="form-control" readonly />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Order Date</div>
                                <div class="col-9">
                                    <input value="@Model.Order.CreationDate.ToShortDateString()" type="text" class="form-control" readonly />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Carrier</div>
                                <div class="col-9">
                                    @if (User.IsInRole(StaticDetails.Admin) || User.IsInRole(StaticDetails.Staff))
                                    {
                                        <input id="carrier" asp-for="Order.Carrier" type="text" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="Order.Carrier" type="text" class="form-control" readonly />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Tracking</div>
                                <div class="col-9">
                                    @if (User.IsInRole(StaticDetails.Admin) || User.IsInRole(StaticDetails.Staff))
                                    {
                                        <input id="trackingNumber" asp-for="Order.TrackingNumber" type="text" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="Order.TrackingNumber" type="text" class="form-control" readonly />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Shipping Date</div>
                                <div class="col-9">
                                    <input value="@Model.Order.ShippingDate.ToShortDateString()" type="text" class="form-control" readonly />
                                </div>
                            </div>
                            @if (User.IsInRole(StaticDetails.Admin) || User.IsInRole(StaticDetails.Staff))
                            {
                                <div class="row my-1">
                                    <div class="col-3">Session ID</div>
                                    <div class="col-9">
                                        <input asp-for="Order.SessionId" type="text" class="form-control" readonly />
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">Payment Intent ID</div>
                                    <div class="col-9">
                                        <input asp-for="Order.PaymentIntentId" type="text" class="form-control" readonly />
                                    </div>
                                </div>
                            }
                            <div class="row my-1">
                                @if (Model.Order.SessionId == null)
                                {
                                    <div class="col-3">Payment Due Date</div>
                                    <div class="col-9">
                                        <input value="@Model.Order.PaymentDueDate.ToShortDateString()" type="text" class="form-control" readonly />
                                    </div>
                                }
                                else
                                {
                                    <div class="col-3">Payment Date</div>
                                    <div class="col-9">
                                        <input value="@Model.Order.PaymentDate.ToShortDateString()" type="text" class="form-control" readonly />
                                    </div>
                                }
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Payment Status</div>
                                <div class="col-9">
                                    <input asp-for="Order.PaymentStatus" type="text" class="form-control" readonly />
                                </div>
                            </div>
                            @if (User.IsInRole(StaticDetails.Admin) || User.IsInRole(StaticDetails.Staff))
                            {
                                <button type="submit" class="btn btn-warning form-control" asp-action="Update">Update Order Details</button>
                            }
                        </div>
                        <div class="col-12 col-lg-5 offset-lg-1">
                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-primary">Order Summary</span>
                            </h4>
                            <label class="btn btn-outline-primary form-control my-2">Order Status - @Model.Order.Status</label>

                            <ul class="list-group mb-3">
                                @foreach (var orderDetail in Model.OrderDetails)
                                {
                                    <li class="list-group-item d-flex justify-content-between p-2">
                                        <div class="row container">
                                            <div class="col-8">
                                                <h6 class="my-0 text-primary">@orderDetail.Product.Title</h6>
                                                <small class="text-muted">Price: @orderDetail.Price.ToString("c")</small>
                                                <small class="text-muted">Quantity: @orderDetail.Quantity</small>
                                            </div>
                                            <div class="col-4">
                                                <p class="text-success">@((orderDetail.Price * orderDetail.Quantity).ToString("c"))</p>
                                            </div>
                                        </div>
                                    </li>
                                }
                                <li class="list-group-item bg-info">
                                    <div class="row container">
                                        <div class="col-6">
                                            <h5 class="text-white">TOTAL</h5>
                                        </div>
                                        <div class="col-6 text-end">
                                            <h5 class="text-end">@Model.Order.Total.ToString("c")</h5>
                                        </div>
                                    </div>
                                </li>
                            </ul>

                            @if (User.IsInRole(StaticDetails.Admin) || User.IsInRole(StaticDetails.Staff))
                            {
                                @if (Model.Order.Status == StaticDetails.StatusApproved)
                                {
                                    <input type="submit" class="btn btn-primary form-control my-1" value="Start Processing" asp-action="Process" />
                                }

                                @if (Model.Order.Status == StaticDetails.StatusInProcess)
                                {
                                    <input type="submit" class="btn btn-primary form-control my-1 js-validate-shipping" value="Ship Order" asp-action="Ship" />
                                }

                                @if (Model.Order.PaymentStatus == StaticDetails.PaymentStatusDelayedPayment
                               && Model.Order.Status == StaticDetails.StatusShipped)
                                {
                                    <input type="submit" class="btn btn-success form-control my-1" value="Pay Now" asp-action="PayForOrder" />
                                }

                                @if (Model.Order.Status != StaticDetails.StatusRefunded
                               && Model.Order.Status != StaticDetails.StatusCancelled
                               && Model.Order.Status != StaticDetails.StatusShipped)
                                {
                                    <input type="submit" class="btn btn-danger form-control my-1" value="Cancel Order" asp-action="Cancel" />
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<partial name="_Notification"></partial>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }

    <script src="~/js/orders/orderDetails.js"></script>
}