@model Category

<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input type="text" asp-for="Name" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder" class="form-label"></label>
            <input type="text" asp-for="DisplayOrder" class="form-control" disabled />
        </div>
        <input hidden asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a class="btn btn-secondary" role="button" asp-controller="Categories" asp-action="Index">Go Back</a>
    </div>
</form>

@section Scripts {
  @{
      <partial name="_ValidationScriptsPartial"/>
  }
}
